<% if notice %>
  <div class="alert alert-primary" role="alert">
    <aside id="notice"><%= notice %></aside>
  </div>
<% end %>

<h1>Food</h1>

<div class="container">
  <div class="row justify-content-start">
    <% @products.each do |food| %>
      <% cache food do %>
        <div class="col-3" style="margin: 30px;">
          <%= image_tag(food.photo, height:  '100', width: '100') %>
          <h2><%= food.title %></h2>
          <div class="price">
            <%= number_to_currency(food.price) %>
            <%= button_to 'Add to Cart', line_items_path(food_id: food), :class => 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
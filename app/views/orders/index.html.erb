<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Pay type</th>
      <th>Status</th>
      <th>Created date</th>
      <% if session[:is_admin] %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.pay_type %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Show Order', order_path(order.id) %></td>
        <% if order.status == "ordered" %>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <% end %>
        <% if order.status == "ordered" or order.status == "paid" %>
          <td><%= link_to 'Cancel', cancel_order_path(order) %></td>
        <% end %>
        <% if session[:is_admin] %>
          <% if order.status == "ordered" %>
            <td><%= link_to 'Mark as paid', paid_order_path(order) %></td>
          <% end %>
          <% if order.status == "paid" %>
            <td><%= link_to 'Mark as completed', completed_order_path(order) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
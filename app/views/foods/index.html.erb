<p id="notice"><%= notice %></p>

<h1>Foods</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |food| %>
      <tr>
        <td><%= food.title %></td>
        <td><%= food.description %></td>
        <td><%= food.price %></td>
        <td><%= image_tag(food.photo, height:  '100', width: '100')  %></td>
        <td><%= food.category_id %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>
